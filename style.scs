$fontColor: #284DCC;
$fontColor2: #998D6B;
$backGroundColor: #6B7599;
$backGroundColor2: #FFB68C;
$headerColor: #CC4C28;
* {
  margin: 0;
  padding: 0;
}
header a button {
  color: $fontColor;
}
$headerFont: Helvetica, sans-serif;
$headerFontSize: (10/7) * 1em;
body{
  background: white;
  font: {
    family: 'Raleway', sans-serif;;
    size: $headerFontSize;
  }
  margin-bottom: -50px;
  padding-bottom: 50px;
}
header{
  width: 100%;
  margin: 0;
  justify-content: center;
  font-style: $headerFont;
  background: linear-gradient(90deg, $backGroundColor, $fontColor2);
  padding-bottom: 20px;
  position: relative;
}
#title {
  font: {
    size: 3em;
    family: 'Gloria Hallelujah', cursive;
  }
  width: 100%;
}
#signLinks {
  p {
    color: #fff;
  }
  a {
    text-decoration: none;
    color: $fontColor;
  }
  color: $fontColor;
  text-align: center;
  margin-right: 20px;
  position: absolute;
  top: 15px;
  right: 2px;
}
.footer {
  background: linear-gradient(90deg, $backGroundColor, $fontColor2);
  opacity: 0.5;
  height: 35px;
  width: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0px;
}
#buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  float: left;
  height: 50px;
  margin: 30px;
  overflow: hidden;
  background: black;
  margin-top: 0;
  margin-left: 0;
  #nav-bar {
    a {
      color: #fff;
      text-decoration: none;
      padding-left: 10px;
      padding-right: 10px;
    }
  }
  button{
    background: black;
    border-radius: 5px;
    padding-left: 10px;
    padding-right: 10px;
    margin-right: 5px;
    margin-left: 5px;
    margin-top: 7px;
    width: 10%;
    float: left;
    font: {
      size: 1em;
      family: 'Raleway', sans-serif;
    }
  }
  p {
    float: left;
    color: $fontColor;
    padding-left: 10px;
    padding-right: 10px;
    margin-right: 10px;
    margin-left: 10px;
    margin-top: 12px;
  }
}
strong {
  color: black;
}
h1 {
  text-align: center;
  color: $fontColor;
  font: {
    family: 'Raleway', sans-serif;
  }
}
h2 {
  text-align: center;
  color: $fontColor;
  font: {
