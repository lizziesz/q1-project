  height: 300px;
  width: 700px;
}
.form {
  padding-bottom: 50px;
}
.top {
  margin-bottom: 15px;
}
.pets {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  width: 100%;
  padding-bottom: 50px;
  font: {
    family: 'Raleway', sans-serif;
  }
  .eachpet {
    // display: inline-block;
    text-align: center;
    width: 350px;
    border: solid 1px black;
    border-radius: 5px;
    text-align: center;
    float: left;
    margin: 5px;
    margin-bottom: 20px;
    height: 500px;
    padding-top: 10px;
    overflow: scroll;
  }
  img {
    width: 90;
    border: solid 1px black;
    border-radius: 50px;
    margin-left: -5px;
  }
  li {
    margin-left: -45px;
    font-size: 0.75em;
  }
  .content {
    margin-left: 50px;
  }
}
.error {
  color: red;
  text-align: center;
  font: {
    family: 'Raleway', sans-serif;
  }
  margin-bottom: 5px;
}
.formheading {
  margin-bottom: 20px;
}
#foundlink {
  text-align: center;
  font: {
    family: 'Raleway', sans-serif;
  }
  margin-bottom: 20px;
  a {
    color: $fontColor;
  }
}
#successzip {
  text-align: center;
  font: {
    family: 'Raleway', sans-serif;
  }
  margin-bottom: 20px;
}
#sheltershow {
  text-align: center;
  align-items: center;
  margin-top:20px;
}

#lostform {
  margin-bottom: 50px;
  text-align: left;
  align-items: center;
  width: 85%;
  a {
    margin-bottom: 20px;
  }
  .radio {
    float: left;
  }
  input, textarea{
    padding: 9px;
    border: solid 1px #E5E5E5;
    outline: 0;
    // width: 400px;
    background: #FFFFFF;
    box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
    -moz-box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
    -webkit-box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
    background: -webkit-gradient(linear, left top, left 25, from(#FFFFFF), color-stop(4%, #EEEEEE), to(#FFFFFF));
    background: -moz-linear-gradient(top, #FFFFFF, #EEEEEE 1px, #FFFFFF 25px);
    margin: 5px;
    font: {
      size: 1em;
      family: 'Raleway', sans-serif;
      }
    }
  .textarea {
      width: 600px;
      max-width: 600px;
      height: 150px;
      line-height: 150%;
    }
  input:hover, textarea:hover,
  input:focus, textarea:focus {
    border-color: #C9C9C9;
    -webkit-box-shadow: rgba(0, 0, 0, 0.15) 0px 0px 8px;
    }
    .submit {
      width: auto;
      padding: 9px 15px;
      background: #617798;
      border: 0;
      font-size: 14px;
      color: #FFFFFF;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      font: {
        size: 1em;
        family: 'Raleway', sans-serif;
      }
    }
}
